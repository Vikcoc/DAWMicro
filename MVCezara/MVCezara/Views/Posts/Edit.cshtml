@model MVCezara.Models.Post
@{
    ViewBag.Title = "Editeaza postarea";
}

<h2> @ViewBag.Title </h2>
<form method="post" action="/Posts/Edit/@Model.PostId">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Label("Content", "Continut postare") <br />
    @Html.Editor("Content") <br /><br />

    <button class="btn btn-success" type="submit"> Editeaza postarea </button>
</form>
<hr />
<a class="btn btn-primary" href="/Posts/Show/@Model.PostId"> Inapoi la postare </a>