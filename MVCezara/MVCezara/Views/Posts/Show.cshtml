
@{
    ViewBag.Title = "Afisare postare";
}

<h2> @ViewBag.Title </h2>

<div class="panel panel-default">
    <div class="panel-body">
        <p> @ViewBag.post.Content </p>
        <hr />
        <a class="btn btn-primary pull-left" href="/Posts/Edit/@ViewBag.post.PostId"> Editeaza postarea </a>
        <form method="post" action="/Posts/Delete/@ViewBag.post.PostId">
            @Html.HttpMethodOverride(HttpVerbs.Delete)
            <button class="btn btn-danger pull-right" type="submit"> Sterge postarea </button>
        </form>
    </div>
</div>

<hr />
<br />
@foreach (var comm in ViewBag.post.Comments)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div>
                    <p>@comm.Content</p>
                </div>
                <div style="display: inline-block; float : left; margin-right: 15px">
                    <a class="glyphicon glyphicon-pencil" href="/Comments/Edit/@comm.CommentId"></a>
                </div>
                <div style="display: inline-block; float : left">
                    <form method="post" action="/Comments/Delete/@comm.CommentId">
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button class="glyphicon glyphicon-trash" style="border: none; background: transparent" type="submit"></button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <hr />
}


<div class="container">
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <div class="panel">
                <form method="post" action="/Comments/New">
                    <div class="panel-body">
                        <input type="hidden" name="PostId" value="@ViewBag.post.PostId" />
                        <input type="hidden" name="IdEdited" value="false" />

                        <label>Continut comentariu</label>
                        <br />
                        <textarea class="form-control" name="Content"></textarea>
                        <br />
                        <button class="btn btn-success " type="submit">Adauga comentariu</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
<hr />

<a class="btn btn-primary" href="/Posts/Index"> Inapoi la lista de postari </a>